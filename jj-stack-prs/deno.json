{
	"tasks": {
		"dev": "deno run --watch main.ts",
		"test": "deno test --allow-run --allow-write --allow-read",
		"lint": "deno run -A npm:@biomejs/biome@2 lint .",
		"check": "deno run -A npm:@biomejs/biome@2 check --write .",
		"format": "deno run -A npm:@biomejs/biome@2 format --write .",
		"typecheck": "deno check **/*.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/testing": "jsr:@std/testing@1"
	},
	"compilerOptions": {
		"lib": ["deno.window", "deno.ns"]
	}
}
